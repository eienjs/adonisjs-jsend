{
  "name": "@eienjs/adonisjs-jsend",
  "type": "module",
  "version": "1.0.2",
  "packageManager": "pnpm@10.13.1",
  "description": "Simple helpers to generate JSend-compliant JSON responses",
  "author": "Fernando Isidro <luffynando@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/eienjs/adonisjs-jsend",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eienjs/adonisjs-jsend.git"
  },
  "bugs": {
    "url": "https://github.com/eienjs/adonisjs-jsend/issues"
  },
  "keywords": [
    "adonis",
    "adonisjs",
    "api",
    "jsend"
  ],
  "exports": {
    ".": "./build/index.js",
    "./jsend_provider": "./build/providers/jsend_provider.js"
  },
  "module": "./build/index.js",
  "types": "./build/index.d.ts",
  "files": [
    "!build/bin",
    "!build/tests",
    "build"
  ],
  "engines": {
    "node": ">=20.19"
  },
  "scripts": {
    "prepare": "is-in-ci || husky",
    "clean": "del-cli build",
    "changelog": "auto-changelog -p && git add CHANGELOG.md",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "test": "node --import ts-node-maintained/register/esm --enable-source-maps bin/test.ts",
    "test:coverage": "c8 pnpm run test",
    "tool:code": "pnpm run lint:check && pnpm run typecheck",
    "tool:build": "pnpm run tool:code && pnpm run test",
    "prebuild": "pnpm run tool:code && pnpm run clean",
    "build": "tsup-node --metafile && tsc --emitDeclarationOnly --declaration",
    "release": "np",
    "version": "pnpm run build && pnpm run changelog"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.15.0"
  },
  "dependencies": {
    "youch": "^3.3.4"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/core": "^6.15.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eienjs/eslint-config": "^1.1.0",
    "@japa/assert": "^4.1.1",
    "@japa/runner": "^4.3.1",
    "@nodecfdi/tsconfig": "^1.7.4",
    "@swc/core": "^1.13.3",
    "@types/node": "^22.17.1",
    "@vinejs/vine": "^3.0.1",
    "auto-changelog": "^2.5.0",
    "c8": "^10.1.3",
    "del-cli": "^6.0.0",
    "eslint": "^9.33.0",
    "husky": "^9.1.7",
    "is-in-ci": "^1.0.0",
    "np": "^10.2.0",
    "ts-node-maintained": "^10.9.6",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@swc/core",
      "esbuild"
    ]
  },
  "c8": {
    "reporter": [
      "text",
      "lcov"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "auto-changelog": {
    "template": "keepachangelog",
    "hideCredit": true
  },
  "np": {
    "message": "chore(release): :tada: %s",
    "tag": "latest",
    "branch": "main",
    "testScript": "test"
  },
  "tsup": {
    "entry": [
      "./index.ts",
      "./providers/jsend_provider.ts"
    ],
    "outDir": "./build",
    "clean": false,
    "format": "esm",
    "dts": false,
    "sourceMap": true,
    "target": "esnext"
  }
}
