{
  "name": "@eienjs/adonisjs-jsend",
  "type": "module",
  "version": "1.0.3-0",
  "packageManager": "pnpm@10.15.0",
  "description": "Simple helpers to generate JSend-compliant JSON responses",
  "author": "Fernando Isidro <luffynando@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/eienjs/adonisjs-jsend",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eienjs/adonisjs-jsend.git"
  },
  "bugs": {
    "url": "https://github.com/eienjs/adonisjs-jsend/issues"
  },
  "keywords": [
    "adonis",
    "adonisjs",
    "api",
    "jsend"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./jsend_provider": "./dist/providers/jsend_provider.js"
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20.19"
  },
  "scripts": {
    "prepare": "is-in-ci || husky",
    "changelog": "auto-changelog -p && git add CHANGELOG.md",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "test": "node --import ts-node-maintained/register/esm --enable-source-maps bin/test.ts",
    "test:coverage": "c8 pnpm run test",
    "tool:code": "pnpm run lint:check && pnpm run typecheck",
    "tool:build": "pnpm run tool:code && pnpm run test",
    "prebuild": "pnpm run tool:code",
    "build": "tsdown --dts",
    "release": "np",
    "version": "pnpm run build && pnpm run changelog"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.15.0"
  },
  "dependencies": {
    "youch": "^3.3.4"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/core": "^6.15.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eienjs/eslint-config": "^1.1.1",
    "@japa/assert": "^4.1.1",
    "@japa/runner": "^4.4.0",
    "@nodecfdi/tsconfig": "^1.7.4",
    "@swc/core": "^1.13.4",
    "@types/node": "^22.17.2",
    "@vinejs/vine": "^3.0.1",
    "auto-changelog": "^2.5.0",
    "c8": "^10.1.3",
    "eslint": "^9.33.0",
    "husky": "^9.1.7",
    "is-in-ci": "^2.0.0",
    "np": "^10.2.0",
    "ts-node-maintained": "^10.9.6",
    "tsdown": "^0.14.1",
    "typescript": "^5.9.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@swc/core",
      "esbuild"
    ]
  },
  "c8": {
    "reporter": [
      "text",
      "lcov"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "auto-changelog": {
    "template": "keepachangelog",
    "hideCredit": true
  },
  "np": {
    "message": "chore(release): :tada: %s",
    "tag": "latest",
    "branch": "main",
    "testScript": "test"
  }
}
